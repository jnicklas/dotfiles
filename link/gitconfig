[alias]
	ci = commit
	co = checkout
	st = status
	s = status
	automerge = !git config branch.master.remote origin && git config branch.master.merge refs/heads/master
[color]
	interactive = auto
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore
[apply]
	whitespace = nowarn
[browser "gitscm"]
  cmd = /bin/sh -c 'open http://git-scm.com/docs/$(basename $1 .html)' --
[help]
  browser = gitscm
[rebase]
	autosquash = true
[push]
	default = upstream
[branch]
	autosetuprebase = always
[pull]
	rebase = true
